extends ./layout/_page.pug

block vars
  -
    var page = pages.start;

block content
  .c-article
    include ./modules/_article-head.pug
    .c-article__content
      h2.c-article__content-head
        |Two-way binding
      #app-twoway
        p.
          {{ message }}
        input(type="text", v-model="message")
      h2.c-article__content-head
        |Rendering a List
      #app-renderlist
        ul
          li(v-for="todo in todos").
            {{ todo.text }}
      h2.c-article__content-head
        |Handle User input
      #app-hundle-user-input
        p.
          {{ message }}
        button(v-on:click="reverseMessage")
          |Reverse Message
      h2.c-article__content-head
        |All Together Now
      #app-all-together
        input(type="text" v-model="newTodo" v-on:keyup.enter="addTodo")
        ul
          li(v-for="todo in todos")
            span.
              {{ todo.text }}
            button(v-on:click="removeTodo($index)")
              |x
        
