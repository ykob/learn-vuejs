extends ./layout/_page.pug

block vars
  -
    var page = pages.style;

block content
  .c-article
    include ./modules/_article-head.pug
    .c-article__content
      h2.c-article__content-head
        |Binding HTML Classes
      #app-html-classes
        p(
          class="static"
          v-bind:class="{ 'is-active': isActive, 'has-error': hasError }"
        )
          |isActive : {{ isActive }}
          br
          |hasError : {{ hasError }}
        p(
          class="static"
          v-bind:class="classObject"
        )
          |classObject: {{ classObject }}
        p(
          class="static"
          v-bind:class="computeClassObject"
        )
          |computeClassObject: {{ computeClassObject }}
      h2.c-article__content-head
        |Binding Inline Styles
      #app-inline-style
        p(
          v-bind:style="{ color: activeColor, fontSize: fontSize + 'px' }"
          )
          |color: {{ activeColor }}
          br
          |fontSize: {{ fontSize }}
        p(
          v-bind:style="styleObject"
          )
          |binding styleObject.
        p(
          v-bind:style="[styleObject, overridingStyles]"
          )
          |binding styleObject and overridingStyles.
